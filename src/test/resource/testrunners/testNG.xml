<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Suite" verbose="10" parallel="tests" thread-count="3">

	<test name="Google Test">
		<parameter name="browser" value="chrome" />
		<parameter name="url" value="https://google.com" />
		
		<classes>
			<class name="MyTestPackage.GoogleTest" />
		</classes>
	</test>


	<test name="OrangeHRM Test">
				<parameter name="browser" value="edge" />
				<parameter name="url" value="https://opensource-demo.orangehrmlive.com/web/index.php/auth/login" />

				<classes>
			<class name="MyTestPackage.OrangeHRMTest" />
		</classes>
	</test>
	
	<test name="OpenCart Test">
				<parameter name="browser" value="firefox" />
				<parameter name="url" value="https://naveenautomationlabs.com/opencart/index.php?route=account/login" />

				<classes>
			<class name="MyTestPackage.OpenCartLoginTest" />
		</classes>
	</test>



</suite>	